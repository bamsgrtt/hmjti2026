<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/proker.css">
  <link rel="stylesheet" href="/css/global.css">
  <link rel="icon" href="/image/hmj/logo_hmj.png">
  <title>
    <%= proker.judul %> - HMJTI
  </title>
</head>

<body>


  <!-- DESKRIPSI -->
  <section class="container py-5">
    <a href="/proker" class="btn btn-secondary mb-3">
      <i class="bi bi-arrow-left"></i> Kembali
    </a>
    <div class="container px-2 mb-4">
      <h2>
        <%= proker.judul %>
      </h2>
      <p>
        <%= proker.divisi %>
      </p>
      <p>
        <%= proker.tahun %>
      </p>
    </div>
  </section>



  <div class="container px-lg-5 py-5">
    <div class="row g-4">

      <!-- KIRI : DESKRIPSI -->
      <div class="col-12 col-lg-8">
        <div class="border rounded-4 shadow-sm p-4 h-100">
          <h2 class="fw-bold fs-5 ">Deskripsi Program</h2>
          <div class="opacity-50">
            <hr>
          </div>
          <p class="mb-0">
            <%= proker.deskripsi %>
          </p>
        </div>
      </div>

      <!-- KANAN : TIMELINE -->
      <div class="col-12 col-lg-4">
        <div class="border rounded-4 shadow-sm p-4 h-100">
          <h2 class="fw-bold fs-5 ">Timeline Program</h2>
          <div class="opacity-50">
            <hr>
          </div>
          <p>
            <%= proker.tanggal %>
          </p>

          <% const today=new Date(); today.setHours( 0, 0, 0, 0); const tanggalDB=new Date(proker.tanggal);
            tanggalDB.setHours(0, 0, 0, 0); let status='' ; let badgeClass='' ; if (tanggalDB> today) {
            status = 'Belum Berjalan';
            badgeClass = 'bg-warning text-dark';
            } else if (tanggalDB.getTime() === today.getTime()) {
            status = 'Sedang Berjalan';
            badgeClass = 'bg-success';
            } else {
            status = 'Selesai';
            badgeClass = 'bg-secondary';
            }
            %>
            <!-- Status -->
            <span class="badge position-absolute py-2
                     <%= badgeClass %>">
              <%= status %>
            </span>


        </div>
      </div>

    </div>
  </div>


 <div class="container px-lg-5 py-5">
  <div class="border rounded-4 shadow-sm p-4">
    <h2 class="fw-bold fs-5">Dokumentasi Program</h2>
    <div class="opacity-50"><hr></div>

    <div class="row g-2 mt-4"> <!-- row untuk grid gambar -->
      <% if (gambar.length === 0) { %>
        <div class="col-12 text-center text-muted">
          Belum ada gambar
        </div>
      <% } %>

      <% gambar.forEach(g => { %>
        <div class="col-6 col-md-3"> <!-- setiap gambar kolom sendiri -->
          <img src="<%= g.file_url %>" class="img-fluid rounded"
               alt="Gambar Proker"
               style="height:240px; width:100%; object-fit:cover;">
        </div>
      <% }) %>
    </div>
  </div>
</div>

  <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
      crossorigin="anonymous"></script>
</body>

</html>