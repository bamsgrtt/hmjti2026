<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

 <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/proker.css">
  <link rel="stylesheet" href="/css/global.css">
  <link rel="icon" href="/image/hmj/logo_hmj.png">
  <title><%= proker.judul %> - HMJTI</title>
</head>
<body>

 
  <!-- DESKRIPSI -->
  <section class="container my-5">
    <a href="/proker" class="btn btn-secondary mb-3">
    <i class="bi bi-arrow-left"></i> Kembali
  </a>
   <div class="container px-2 mb-4">
       <% if (gambar.length === 0) { %>
          <div class="text-center text-muted">belum ada gambar</div>
      <% } else { %>
        <img src="<%= gambar[0].file_url %>" 
        class="img-fluid rounded" 
        alt="cover"
        style="height: 300px; width: 100%; object-fit: cover;">
        
      <% } %>
  </div>
  


    <div class=" mb-3">
    <div class="row g-2">
      <div class="col-md-6 border rounded-1">
        <p><%= proker.deskripsi %></p>
      </div>
      <div class="col-md-6 border rounded-1">
        
        <p><%= proker.deskripsi %></p>
      </div>
    </div>
  </div>
 
      
      <div class="container py-4 border rounded-4 shadow-sm">
        <h2 class="fw-bold ">Dokumentasi</h2>
        <div class="row mt-4 ">
          <% if (gambar.length === 0) { %>
            <div class="col-12 text-center text-muted text-dark">
              Belum ada gambar
            </div>
            <% } %>
            
            <% gambar.forEach(g => { %>
              <div class="col-md-3 mb-3">
                <img src="<%= g.file_url %>" class="img-fluid rounded" alt="Gambar Proker">
              </div>
              <% }) %>
            </div>
          </div>
  </section>
  
  <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
</body>
</html>
