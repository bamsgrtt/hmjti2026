<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
  <link rel="stylesheet" href="/css/proker.css">
  <link rel="stylesheet" href="/css/global.css">
  <link rel="icon" href="/image/hmj/logo_hmj.png">
  <title><%= proker.judul %> - HMJTI</title>
</head>
<body>


  
  <!-- DESKRIPSI -->
  <section class="container my-5">
    <a href="/proker" class="btn btn-secondary mb-3">
    <i class="bi bi-arrow-left"></i> Kembali
  </a>
    <div class="mb-4">
      <p><%= proker.deskripsi %></p>
      
      <div class="container my-3">
        <h2 class="fw-bold">Dokumentasi</h2>
        <div class="row mt-4">
          <% if (gambar.length === 0) { %>
            <div class="col-12 text-center text-muted">
              Belum ada gambar
            </div>
            <% } %>
            
            <% gambar.forEach(g => { %>
              <div class="col-md-3 mb-3">
                <img src="<%= g.file_url %>" class="img-fluid rounded" alt="Gambar Proker">
              </div>
              <% }) %>
            </div>
          </div>
    </div>
  </section>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
